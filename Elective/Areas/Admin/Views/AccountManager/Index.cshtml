
@{
    ViewBag.Title = StringResource.AllUsers;
}

@model IQueryable<BusinessModel.User>

    <table class="table">
        <tr class="danger">
            <th>@StringResource.Id</th>
            <th>@StringResource.UserEmail</th>
            <th>@StringResource.UserLogin</th>
            <th>@StringResource.Ref</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr class="success">
                <td>@item.Id </td>
                <td>@item.Email </td>
                <td>@item.UserName</td>
                <td>@Html.ActionLink(StringResource.Edit, "Index", "EditAccount", new { id = item.Id }, null)</td>
            </tr>
        }
    </table>