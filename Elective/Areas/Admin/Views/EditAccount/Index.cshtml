@{Html.EnableClientValidation(false);}

@{
    ViewBag.Title = StringResource.Edit;
}

@model ChangeAccountDataViewModel

<div class="col-md-7 col-md-offset-2 fon-color">
    @using (Html.BeginForm("Index", "EditAccount", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4 class="text-center">@StringResource.EditAccount</h4>
        <hr />
        <p>@Html.LabelFor(m => m.Email)</p>
        <p>@Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = StringResource.UserEmail })</p>

        <p>@Html.LabelFor(m => m.Login)</p>
        <p>@Html.TextBoxFor(m => m.Login, new { @class = "form-control", @placeholder = StringResource.UserLogin })</p>

        <p>@Html.LabelFor(m => m.FirstName)</p>
        <p>@Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = StringResource.UserName })</p>

        <p>@Html.LabelFor(m => m.SecondName)</p>
        <p>@Html.TextBoxFor(m => m.SecondName, new { @class = "form-control", @placeholder = StringResource.UserSecondName })</p>

        <p>@Html.LabelFor(m => m.Age)</p>
        <p>@Html.EditorFor(m => m.Age)</p>

        <p>@Html.LabelFor(m => m.BirthDate)</p>
        <p>@Html.TextBoxFor(m => m.BirthDate, new { @placeholder = DateTime.Now.ToString("yyyy/MM/dd") })</p>

        <p> @Html.LabelFor(m => m.OldPassword)</p>
        <p> @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @placeholder = StringResource.OldPassword })</p>

        <p> @Html.LabelFor(m => m.NewPassword)</p>
        <p> @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @placeholder = StringResource.NewPassword })</p>

        <p>@Html.LabelFor(m => m.ConfirmPassword)</p>
        <p>@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = StringResource.ConfirmPassword })</p>

        <div class="btn-group">
            <button type="submit" class="btn btn-primary" name="button" value="Change data">@StringResource.ChangeDate</button>
            <button type="submit" class="btn btn-primary" name="button" value="Delete">@StringResource.Delete</button>
            <button type="submit" class="btn btn-primary" name="button" value="Ban">@StringResource.Ban</button>
            <button type="submit" class="btn btn-primary" name="button" value="Restore">@StringResource.Restore</button>
        </div>

        <br />
        <br />
    }
</div>