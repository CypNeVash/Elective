@using BusinessModel
@{
    ViewBag.Title = "Факультатив";
}
@model Facultative

<div class=" col-lg-12 person-color text-balck">
    <br />

    <div class="teacher-color facultative-label text-balck">
        <h2 class="text-center">@Model.Name</h2>
        <p>Тема: @Model.Theme</p>
        <p>Преподаватель: @Model.Lecturer.FullName</p>
        <p>Описание: @Model.Description</p>
        <p>Статус: @Model.Status</p>
        <p>Количество зарегистрированных: @Model.Audience.Count</p>
    </div>
    <br />
    <br />

    @if (Model.Log != null)
    {
        <h2 class="text-center">Журнал оценок</h2>
        <table class="table table-bordered">
            <tr class="label-default">
                <th>Name</th>
                <th>Mark</th>
                <th>Date</th>
            </tr>
            @foreach (var item in Model.Log.Reports)
            {
                string str = item.Mark < 60 ? "label-danger"
                    : (item.Mark < 75) ? "label-warning" : (item.Mark < 90) ? "label-primary" : "label-success";
                <tr class='@str'>
                    <td>@item.Listener.FullName</td>
                    <td>@item.Mark</td>
                    <td>@item.Date.ToShortDateString()</td>
                </tr>
            }
        </table>
    }
</div>