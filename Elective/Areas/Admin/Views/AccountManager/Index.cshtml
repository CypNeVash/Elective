
@{
    ViewBag.Title = "Все пользователи";
}

@model IQueryable<BusinessModel.User>

    <table class="table">
        <tr class="danger">
            <th>Id</th>
            <th>Email</th>
            <th>UserName</th>
            <th>Ref</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr class="success">
                <td>@item.Id </td>
                <td>@item.Email </td>
                <td>@item.UserName</td>
                <td>@Html.ActionLink("Edit", "Index", "EditAccount", new { id = item.Id }, null)</td>
            </tr>
        }
    </table>